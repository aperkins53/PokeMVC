@model PokeMVC.Models.TrainerDetail

@{
    ViewBag.Title = "AddPokemonToTrainerTeam";

}

<h2>Add Pokemon To Trainer Team</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Pokemon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(trainer => trainer.TrainerId)

        <div class="form-group">
            @Html.LabelFor(pokemon => pokemon.Pokemon.Species, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PokemonId", null, "Choose Pokemon" , htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(pokemon => pokemon.Pokemon.Species, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(pokemon => pokemon.Pokemon.Level, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(pokemon => pokemon.Pokemon.Level, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(pokemon => pokemon.Pokemon.Level, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>

}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}