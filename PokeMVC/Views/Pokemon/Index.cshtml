@model IEnumerable<PokeMVC.Models.PokemonListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PokemonId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PokedexNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimaryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondaryType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EvoCondition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginalRegion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsLegendary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsMythical)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokedexNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EvoCondition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalRegion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLegendary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMythical)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PokemonId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PokemonId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PokemonId })
            </td>
        </tr>
    }

</table>
