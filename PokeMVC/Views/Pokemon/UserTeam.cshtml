@model PokeMVC.Models.PokemonDetail

@{
    ViewBag.Title = "AddPokemonToUserTeam";
}

<h2>Add Pokemon To User Team</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Pokemon</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(pokemon => pokemon.Species, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PokemonId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(pokemon => pokemon.Species, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <h4>User Team</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.PokemonId)
        </dt>
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.PokedexNumber)
        </dt>
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.Species)
        </dt>
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.PrimaryType)
        </dt>
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.SecondaryType)
        </dt>
        <dt>
            @Html.DisplayNameFor(pokemon => pokemon.EvoCondition)
        </dt>

        @if (Model.UserTeam.Count <= 0)
        {
            foreach (var pokemonInTeam in Model.UserTeam)
            {
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.PokemonId)
                </dd>
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.PokedexNumber)
                </dd>
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.Species)
                </dd>
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.PrimaryType)
                </dd>
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.SecondaryType)
                </dd>
                <dd>
                    @Html.DisplayFor(pokemon => pokemon.EvoCondition)
                </dd>
            }
        }
    </dl>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
